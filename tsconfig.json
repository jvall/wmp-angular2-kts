{
  "compilerOptions": {
    "rootDir": "src",
    "target": "ES5",
    "module": "system",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "removeComments": false,
    "preserveConstEnums": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true
  },
  "exclude": [
    "jspm_packages",
    "node_modules"
  ]
}